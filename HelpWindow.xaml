<Window x:Class="ImageAndMp4WebBuilder.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Help" Height="400" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="Image and MP4 Thumbnail Browser - Help" FontSize="16" FontWeight="Bold" />
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock TextWrapping="Wrap">
                    Use this app to browse a folder of images (.png, .jpg, .jpeg) and videos (.mp4). Thumbnails are created in a 'thumbnails' subfolder.
                </TextBlock>
                <Separator Margin="0,8,0,8" />
                <TextBlock TextWrapping="Wrap">
                    1. Select Folder: Choose a folder. Thumbnails will be generated if missing.
                </TextBlock>
                <TextBlock TextWrapping="Wrap">
                    2. Navigation: Use Prev/Next to change pages.
                </TextBlock>
                <TextBlock TextWrapping="Wrap">
                    3. Open Items: Click a thumbnail. Images open in a preview; videos open with your default player.
                </TextBlock>
                <TextBlock TextWrapping="Wrap">
                    4. Export HTML: Generates paged HTML files with links to originals and thumbnails. If an 'out.txt' exists with a URL, page 1 shows a Return link.
                </TextBlock>
                <TextBlock TextWrapping="Wrap">
                    5. Keyboard: Press Ctrl+H anytime to show this help.
                </TextBlock>
            </StackPanel>
        </ScrollViewer>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="80" Height="26" Margin="0,10,0,0" IsDefault="True" Content="Close" Click="Close_Click" />
        </StackPanel>
    </Grid>
</Window>
