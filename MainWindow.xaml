<Window x:Class="ImageAndMp4WebBuilder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageAndMp4WebBuilder"
        mc:Ignorable="d"
        Title="Image and MP4 Thumbnail Browser" Height="600" Width="1000">
    <Window.CommandBindings>
        <CommandBinding Command="Help" Executed="HelpCommand_Executed" />
    </Window.CommandBindings>
    <Window.InputBindings>
        <KeyBinding Command="Help" Modifiers="Control" Key="H" />
    </Window.InputBindings>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
            <Button x:Name="SelectFolderButton" Content="Select Folder" Click="SelectFolderButton_Click" Width="120" Margin="0,0,10,0" />
            <Button x:Name="ExportHtmlButton" Content="Export HTML" Click="ExportHtmlButton_Click" Width="100" Margin="0,0,15,0" />
            <Button x:Name="PrevPageButton" Content="&lt; Prev" Width="70" Click="PrevPageButton_Click" Margin="0,0,5,0" />
            <Button x:Name="NextPageButton" Content="Next >" Width="70" Click="NextPageButton_Click" Margin="0,0,15,0" />
            <CheckBox x:Name="IgnoreNsfwCheckBox" Content="Ignore NSFW" IsChecked="True" VerticalAlignment="Center" Margin="0,0,15,0" />
            <TextBlock x:Name="PageInfoText" VerticalAlignment="Center" Margin="0,0,20,0" />
            <TextBlock Text="Folder:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,5,0" />
            <TextBlock x:Name="SelectedFolderText" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" Width="400" Margin="0,0,15,0" />
            <TextBlock x:Name="StatusText" VerticalAlignment="Center" Foreground="DarkGreen" />
        </StackPanel>
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ThumbnailsItemsControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type local:ThumbnailItem}">
                        <Border Width="210" Margin="5" Padding="5" CornerRadius="4" BorderThickness="3">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="BorderBrush" Value="Blue" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsVideo}" Value="True">
                                            <Setter Property="BorderBrush" Value="Green" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel>
                                <Image Source="{Binding ThumbnailPath}" Width="200" Stretch="Uniform" MouseLeftButtonUp="Thumbnail_MouseLeftButtonUp" Cursor="Hand" />
                                <TextBlock Text="{Binding DisplayName}" TextAlignment="Center" TextTrimming="CharacterEllipsis" Width="200" FontSize="12" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
